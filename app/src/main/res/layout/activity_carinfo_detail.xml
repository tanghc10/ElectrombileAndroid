<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="presenter"
            type="com.xiaoantech.electrombile.ui.main.SettingFragment.activity.CarManager.CarInfoDetail.CarInfoDetailContract.Presenter" />
        <variable
            name="carInfo"
            type="com.xiaoantech.electrombile.model.CarInfoModel"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/navigation"
            layout="@layout/bar_navigation_title"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="80dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="80dp"
            tools:ignore="MissingConstraints"
            android:background="@color/background_grey">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@drawable/bb"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/view"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                app:layout_constraintVertical_bias="0.26" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                android:orientation="vertical"
                android:id="@+id/linearLayout5"
                android:background="@color/white"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="车辆名称"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_car_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="暂无信息"
                        android:textColorHint="@color/grey_txt"
                        android:layout_marginLeft="25dp"
                        android:textSize="16sp" />


                </LinearLayout>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="@color/background_grey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="车牌号"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_plate_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="暂无信息"
                        android:textColorHint="@color/grey_txt"
                        android:layout_marginLeft="25dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="@color/background_grey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="车架号"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_frame_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="暂无信息"
                        android:textColorHint="@color/grey_txt"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="@color/background_grey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="电池型号"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_battery_version"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="暂无信息"
                        android:textColorHint="@color/grey_txt"
                        android:layout_marginLeft="25dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="75dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="品牌"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_brand_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="暂无信息"
                        android:textColorHint="@color/grey_txt"
                        android:layout_marginLeft="25dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="@color/background_grey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="厂家电话"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_vender_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="暂无信息"
                        android:textColorHint="@color/grey_txt"
                        android:layout_marginLeft="25dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:onClick="@{ () -> presenter.gotoRevise()}"
                android:text="修改信息"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                app:layout_constraintHorizontal_bias="0.514"
                style="?android:attr/borderlessButtonStyle"/>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</layout>